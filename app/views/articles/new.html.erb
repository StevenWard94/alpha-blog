<h1>Create a New Article</h1>

<% if @article.errors.any? %>
  <h3>The following errors prevented your article from being saved:</h3>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with scope: :article, data: { turbo: false }, url: articles_path, local: true do |f| %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<p>
  <%= link_to "Cancel and return to articles list", articles_path %>
</p>
